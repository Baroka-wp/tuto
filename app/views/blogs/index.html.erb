<div class="container">
<% @blog.each do |blog| %>
<table class="table">
  <tbody>
    <tr>
      <td><%= image_tag blog.image.url,:class=>"img-fluid rounded mx-auto d-block",
                                        :alt=>"Responsive image"%></td>
    </tr>
    <tr>
      <td><%= blog.content%></td>
    </tr>
    <tr>
      <td><%= link_to "show",blog_path(blog.id)%></td>
      <td><%= link_to "edit",edit_blog_path(blog.id)%></td>
      <td><%= link_to "destroy",blog_path(blog.id), method: :delete ,data: { confirm:"Are you sure"}%></td>
    </tr>
   <% end %>
  </tbody>

</table>
<%= link_to "new",new_blog_path%>
</div>
